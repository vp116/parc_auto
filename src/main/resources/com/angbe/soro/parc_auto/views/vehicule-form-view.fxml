<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="307.0" prefWidth="366.0" spacing="15" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">
    <Label style="-fx-font-size: 18; -fx-font-weight: bold;" text="Formulaire Véhicule" />

    <GridPane hgap="10.0" vgap="10.0">
        <Label text="Immatriculation:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="immatriculationField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label text="Marque:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextField fx:id="marqueField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label text="Modèle:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <TextField fx:id="modeleField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

        <Label text="État:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <ComboBox fx:id="etatCombo" GridPane.columnIndex="1" GridPane.rowIndex="3" />

        <Label text="Date acquisition:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
        <DatePicker fx:id="dateAcquisitionPicker" GridPane.columnIndex="1" GridPane.rowIndex="4" />
      <columnConstraints>
         <ColumnConstraints />
         <ColumnConstraints />
      </columnConstraints>
      <rowConstraints>
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
      </rowConstraints>
    </GridPane>

    <HBox alignment="CENTER_RIGHT" spacing="10.0">
        <Button onAction="#handleCancel" text="Annuler" />
        <Button onAction="#handleSave" style="-fx-background-color: #27ae60; -fx-text-fill: white;" text="Enregistrer" />
    </HBox>
   <padding>
      <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
   </padding>
</VBox>
