<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<VBox xmlns:fx="http://javafx.com/fxml" fx:id="rootPane" prefHeight="571.0"
      prefWidth="516.0" style="-fx-background-color: #f5f5f5; -fx-border-radius: 30px;"
      xmlns="http://javafx.com/javafx" fx:controller="com.angbe.soro.parc_auto.controller.LoginController">

    <!-- Conteneur principal centré -->
    <AnchorPane layoutX="250.0" layoutY="50.0" prefHeight="537.0" prefWidth="526.0">
        <!-- Logo -->
        <ImageView fitHeight="120.0" fitWidth="120.0" layoutX="210.0" layoutY="30.0" pickOnBounds="true"
                   preserveRatio="true" scaleX="2.0" scaleY="2.0" scaleZ="2.0">
            <Image url="@../icon/logo.png"/>
        </ImageView>

        <!-- Titre -->
        <Text fill="#2a4365" fontSmoothingType="LCD" layoutX="193.0" layoutY="150.0" strokeType="OUTSIDE"
              strokeWidth="0.0" text="Connexion" textAlignment="CENTER">
            <font>
                <Font name="Segoe UI Semibold" size="28.0"/>
            </font>
        </Text>

        <!-- Formulaire -->
        <VBox alignment="CENTER_LEFT" layoutX="47.0" layoutY="182.0" prefHeight="325.0" prefWidth="429.0" spacing="10.0"
              style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 30; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">

            <!-- Champ Email -->
            <Label style="-fx-text-fill: #4a5568; -fx-font-weight: bold;" text="Email">
                <font>
                    <Font name="Segoe UI Semibold" size="13.0"/>
                </font>
            </Label>
            <TextField fx:id="emailField" promptText="Entrez votre email"
                       style="-fx-background-radius: 4; -fx-border-radius: 4; -fx-border-color: #e2e8f0; -fx-pref-height: 40;"/>

            <!-- Champ Mot de passe -->
            <Label style="-fx-text-fill: #4a5568; -fx-font-weight: bold;" text="Mot de passe"/>
            <PasswordField fx:id="passwordField" promptText="Entrez votre mot de passe"
                           style="-fx-background-radius: 4; -fx-border-radius: 4; -fx-border-color: #e2e8f0; -fx-pref-height: 40;"/>

            <!-- Options -->
            <HBox alignment="CENTER_LEFT" spacing="100.0">
                <CheckBox fx:id="rememberCheckBox" style="-fx-text-fill: #4a5568;" text="Se souvenir de moi"/>
                <Hyperlink fx:id="forgotPasswordLink" style="-fx-text-fill: #4299e1;" text="Mot de passe oublié ?"/>
            </HBox>

            <!-- Bouton de connexion -->
            <Button maxWidth="Infinity" fx:id="loginButton" mnemonicParsing="false" prefHeight="40.0"
                    style="-fx-background-color: #4299e1; -fx-background-radius: 4; -fx-text-fill: white; -fx-font-weight: bold;"
                    text="Se connecter"/>

            <!-- Lien d'inscription -->
            <HBox alignment="CENTER" spacing="5.0">
                <Label style="-fx-text-fill: #4a5568;" text="Nouvel utilisateur ?"/>
                <Hyperlink fx:id="createAccountLink" style="-fx-text-fill: #4299e1;" text="Créer un compte"/>
            </HBox>
        </VBox>
    </AnchorPane>

    <!-- Pied de page -->
    <Label alignment="CENTER" layoutY="460.0" prefHeight="30.0" prefWidth="800.0" style="-fx-text-fill: #718096;"
           text="© 2023 MIage Holding. Tous droits réservés." textAlignment="CENTER">
        <font>
            <Font name="Segoe UI" size="13.0"/>
        </font>
    </Label>
    <padding>
        <Insets bottom="10.0" right="10.0" top="10.0"/>
    </padding>
</VBox>
