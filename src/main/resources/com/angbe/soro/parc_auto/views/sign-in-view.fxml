<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<AnchorPane xmlns:fx="http://javafx.com/fxml"
            prefHeight="600.0" prefWidth="800.0"
            style="-fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx"
            fx:controller="com.angbe.soro.parc_auto.controller.SignInController"
>

    <VBox alignment="CENTER" layoutX="225.0" layoutY="50.0" spacing="20.0">
        <!-- Logo -->
        <ImageView fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
            <Image url="@../icon/logo.png"/>
        </ImageView>

        <!-- Titre -->
        <Text fill="#2a4365" fontSmoothingType="LCD" strokeType="OUTSIDE" strokeWidth="0.0"
              text="Créer un compte" textAlignment="CENTER">
            <font>
                <Font name="Segoe UI Semibold" size="28.0"/>
            </font>
        </Text>

        <!-- Formulaire -->
        <VBox alignment="CENTER_LEFT" spacing="10.0"
              style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 30; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);"
              prefWidth="350.0">

            <!-- Champ Nom -->
            <Label text="Nom complet" style="-fx-text-fill: #4a5568; -fx-font-weight: bold;"/>
            <TextField fx:id="nomField" promptText="Entrez votre nom complet"
                       style="-fx-background-radius: 4; -fx-border-radius: 4; -fx-border-color: #e2e8f0; -fx-pref-height: 40;"/>

            <!-- Champ Email -->
            <Label text="Email" style="-fx-text-fill: #4a5568; -fx-font-weight: bold;"/>
            <TextField fx:id="emailField" promptText="Entrez votre email"
                       style="-fx-background-radius: 4; -fx-border-radius: 4; -fx-border-color: #e2e8f0; -fx-pref-height: 40;"/>

            <!-- Champ Mot de passe -->
            <Label text="Mot de passe" style="-fx-text-fill: #4a5568; -fx-font-weight: bold;"/>
            <PasswordField fx:id="passwordField" promptText="Entrez votre mot de passe"
                           style="-fx-background-radius: 4; -fx-border-radius: 4; -fx-border-color: #e2e8f0; -fx-pref-height: 40;"/>

            <!-- Confirmation Mot de passe -->
            <Label text="Confirmer mot de passe" style="-fx-text-fill: #4a5568; -fx-font-weight: bold;"/>
            <PasswordField fx:id="confirmPasswordField" promptText="Confirmez votre mot de passe"
                           style="-fx-background-radius: 4; -fx-border-radius: 4; -fx-border-color: #e2e8f0; -fx-pref-height: 40;"/>

            <!-- Conditions -->
            <CheckBox fx:id="conditionsCheckBox" text="J'accepte les conditions d'utilisation"
                      style="-fx-text-fill: #4a5568;"/>

            <!-- Bouton d'inscription -->
            <Button fx:id="inscriptionButton" maxWidth="Infinity" mnemonicParsing="false" prefHeight="40.0"
                    style="-fx-background-color: #4299e1; -fx-background-radius: 4; -fx-text-fill: white; -fx-font-weight: bold;"
                    text="S'inscrire"/>

            <!-- Lien de connexion -->
            <HBox alignment="CENTER" spacing="5.0">
                <Label text="Déjà un compte ?" style="-fx-text-fill: #4a5568;"/>
                <Hyperlink fx:id="loginLink" text="Se connecter" style="-fx-text-fill: #4299e1;"/>
            </HBox>
        </VBox>
    </VBox>

    <!-- Pied de page -->
    <Label alignment="CENTER" layoutY="560.0" prefHeight="30.0" prefWidth="800.0"
           text="© 2023 Mon Application. Tous droits réservés." textAlignment="CENTER"
           style="-fx-text-fill: #718096;"/>
</AnchorPane>